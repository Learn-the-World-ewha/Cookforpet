<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RefDetailFragment"
    android:orientation="vertical">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/img_main"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:layout_marginTop="60dp"
            tools:srcCompat="@color/black" />
        <TextView
            android:id="@+id/txt_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginVertical="5dp"
            android:fontFamily="@font/bccardb"
            android:text="Dog's"
            android:textColor="@color/black"
            android:textSize="30sp"
            />
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginVertical="5dp"
            android:fontFamily="@font/bccardb"
            android:text="소고기와 양배추"
            android:textColor="@color/black"
            android:textSize="22sp"
            />
        <TextView
            android:id="@+id/txt_tip"
            android:layout_width = "350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginVertical="5dp"
            android:fontFamily="@font/suncheonr"
            android:text="3일 냉장보관 가능"
            android:textColor="@color/purple_700"
            android:textSize="14sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginVertical="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/suncheonr"
                android:text="조리 날짜: "
                android:textColor="@color/black"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/suncheonr"
                android:text="22.01.26"
                android:textColor="@color/black"
                android:textSize="18sp"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_usedall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:paddingVertical="8dp"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/bccardb"
            android:text="소진 완료"
            android:textSize="20sp" />
    </LinearLayout>

</ScrollView>

</LinearLayout>